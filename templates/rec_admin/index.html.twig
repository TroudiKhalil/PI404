{% extends 'admin.html.twig' %}

{% block title %}Reclamation index{% endblock %}

{% block body %}
<div style="margin-left: 280px; width: 80% ">
{% for message in app.flashes('notification') %}
        <div class="alert alert-info alert-dismissible fade show">
           {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        </div>
    {% endfor %}
    <table class="table">
        <thead>
            <tr>
                <th>Date</th>
                <th>Email</th>
                <th>Telephone</th>
                <th>Cmnt</th>
                <th>Etat</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody> 
        {% for reclamation in reclamations %}
            <tr>
                <td>{{ reclamation.date ? reclamation.date|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ reclamation.email }}</td>
                <td>{{ reclamation.telephone }}</td>
                <td>{{ reclamation.cmnt }}</td>
                <td>{{ reclamation.etat }}</td>
                <td>
                    <a class="btn btn-warning" href="{{ path('app_rec_admin_show', {'id': reclamation.id}) }}">show</a>
                    <a class="btn btn-warning" href="{{ path('app_rec_admin_edit', {'id': reclamation.id}) }}">edit</a>
                    <a class="btn btn-warning" href="{{ path('sendMailToUser', {'id': reclamation.id}) }}">Mailing</a>

                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_rec_admin_new') }}">Create new</a>
 </div>   
{% endblock %}
