{% extends 'admin.html.twig' %}

{% block title %}Reclamation index{% endblock %}

{% block body %}
<div >
    <table class="table" style="margin-left: 280px; width: 80% ">
        <thead>
            <tr>
                <th>Date</th>
                <th>Email</th>
                <th>Telephone</th>
                <th>Cmnt</th>
                <th>Etat</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody> 
        {% for reclamation in reclamations %}
            <tr>
                <td>{{ reclamation.date ? reclamation.date|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ reclamation.email }}</td>
                <td>{{ reclamation.telephone }}</td>
                <td>{{ reclamation.cmnt }}</td>
                <td>{{ reclamation.etat }}</td>
                <td>
                    <a class="btn btn-warning" href="{{ path('app_rec_admin_show', {'id': reclamation.id}) }}">show</a>
                    <a class="btn btn-warning" href="{{ path('app_rec_admin_edit', {'id': reclamation.id}) }}">edit</a>
                    <a class="btn btn-warning" href="{{ path('sendMailToUser', {'id': reclamation.id}) }}">Mailing</a>

                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_rec_admin_new') }}">Create new</a>
    
{% endblock %}
